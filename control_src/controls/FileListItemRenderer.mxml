<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" verticalAlign="middle">
	<mx:Script>
		<![CDATA[
			import com.FileManage;
			import flash.events.FocusEvent;
			import mx.controls.Alert
			override protected function commitProperties():void
			{
				super.commitProperties();
				if (data == null) return;
				im.source = FileManage.getResolvePath(data.xmlData.logo.toString() , data.xmlData.require[0]);
				la.text = data.label;
			}
			private function btn_click():void
			{
				var xml:XML = data.xmlData;
				var t:String = "剧本名称:\t" + data.label+
								"\n原创:\t"+xml.author+
								"\n编译:\t" + xml.translator +
								"\n游戏时间:\t"+xml.playTime+
								"\n介绍:\t"+xml.introduce;
				Alert.show(t, "信息");
			}
			
		]]>
	</mx:Script>
	<mx:Image id="im" height="29" width="29" scaleContent="true"/>
	<mx:Label id="la" width="100%"/>
	<mx:Button upSkin="@Embed('../../lib/nButton.png')" 
				overSkin="@Embed('../../lib/nButton.png')" 
				downSkin="@Embed('../../lib/nButtonPress.png')" 
				click="btn_click();"/>
</mx:HBox>